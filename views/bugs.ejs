<body class="body">
  <%- include('_header') %>
    <style></style>

    <%- include('_head') %>

      <div class="container">
        <div class="totalWidth">
          <br />
          <br />
          <style>
            .input_shawn {
              background-color: rgba(0, 0, 0, 0);
              color: white;
            }

            .input_shawn:active {
              background-color: rgba(0, 0, 0, 0);
              color: white;
            }

            select option {
              background: rgba(156, 19, 19, 0);
              color: white;
            }

            .input_shawn:hover {
              background-color: rgba(0, 0, 0, 0);
              color: white;
            }

            .input_shawn::content {
              background-color: rgba(0, 0, 0, 0);
              color: white;
            }

            .cust_button {
              width: 20em;
              border: 2px solid var(--blue);
              color: white;
              transition: 1.2s;
            }

            .cust_button:hover {
              width: 20em;
              border: 2px solid var(--blue);
              color: white;
              background-color: var(--blue);
            }

            .alertmsg {
              color: black;
            }

          
          </style>
          <section class="resume-section" id="contact">
               <% if(good == false) { %>
            <div class="resume-section-content">
              <h2 class="mb-5">Bug Report</h2>
            </div>
            <% } else { %>
               <div class="resume-section-content">
              <h2 class="mb-5">Bug Report</h2>
            </div>
            <div class="alert alert-success" role="alert">
                  Your bug has been submitted
            </div>
              <% } %>



         



            <form action="/backend/forms/bug/submit" method="post">
              <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control input_shawn" id="email" name="email"
                  aria-describedby="emailHelp" required />
              </div>
              <div class="mb-3">
                <label for="page" class="form-label">Page</label>
                <select class="form-select input_shawn" aria-label="Default select example" id="page" name="page">
                  <option style="background: rgba(29,29,29,29);"selected>Choose A Page</option>
                  <option style="background: rgba(29,29,29,29);" value="[Page](https://shawnengmann.com/home) | Home" class="input_shawn">Home</option>
                  <option style="background: rgba(29,29,29,29);" value="[Page](https://shawnengmann.com/experience) | Experience">Experience</option>
                  <option style="background: rgba(29,29,29,29);" value="[Page](https://shawnengmann.com/skills) | Skills">Skills</option>
                  <option style="background: rgba(29,29,29,29);" value="[Page](https://shawnengmann.com/interests) | Interests">Interests</option>
                  <option style="background: rgba(29,29,29,29);" value="[Page](https://shawnengmann.com/projects) | Projects">Projects</option>
                  <option style="background: rgba(29,29,29,29);" value="[Page](https://shawnengmann.com/contact) | Contact">Contact</option>
                  <option style="background: rgba(29,29,29,29);" value="[Page](https://shawnengmann.com/other) | Other">Other</option>
                </select>

              </div>
              <div class="mb-3">
                <label for="bug" class="form-label">Bug</label>
                <textarea class="form-control input_shawn" id="bug" rows="3" name="bug" maxlength="700"></textarea>
              </div>
              <div class="mb-3">
                <label for="steps" class="form-label">Steps To Reproduce</label>
                <textarea class="form-control input_shawn" id="steps" rows="3" name="steps"
                  maxlength="700"></textarea>
              </div>
              <div class="mb-3">
                <label for="add" class="form-label">Additional Information</label>
                <textarea class="form-control input_shawn" id="add" rows="3" name="add" maxlength="1950"></textarea>
              </div>
              <button type="submit" class="btn cust_button" id="tosting">
                Submit
              </button>
            </form>

        </div>
        </section>
      </div>
      </div>
      <%- include('_footer') %>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
