  <style>
    .staffHR {
      color: white;
      margin: auto;
      width: 13rem;
      margin-bottom: 15px;
    }

    .staffButtons {
      border: none;
      color: white;
      background: none;
      transition: 0.3s;
    }

    .staffButtons:hover {
      font-size: 20px;
      text-decoration: underline;
      color: white !important;
    }

    .UpdateBTN {
      border: none;
      background: none;
      width: 20em;
      height: 30px;
      border-radius: 5px;
      margin-bottom: 15px;
      transition: 0.3s;
      color: white;
      border: 1px solid white;
      background-color: transparent;
    }

    .UpdateBTN:hover {
      color: white;
      filter: brightness(90%);
      background: none;
    }

    .UpdateBTN2 {
      border: none;
      background: none;
      width: 50%;
      font-weight: 600;
      height: 30px;
      border-radius: 5px;
      margin-bottom: 15px;
      transition: 0.3s;
      color: white;
      border: 1px solid white;
      background-color: transparent;
    }

    .UpdateBTN2:hover {
      color: white;
      background-color: white;
    }

  </style>
  <body class="body">
    <%- include('_header') %> 
    <%- include('_head') %> 
    
    <div class="container">
      <br> <br>
<div class="row">
    <div class="col-sm-3 text-center">

      <p class="staffHead">Main Settings</p>
      <hr class="staffHR">
      <p><button class="staffButtons" onclick="change('siteSettings')">Site Settings</button></p>
      </p>
      <br>
      <p class="staffHead">Page Settings</p>
      <hr class="staffHR">
      <p><span><button class="staffButtons" onclick="change('homePage')">Home Page</button></span></p>

    </div>
    <div class="col-sm-7">
    
        <div id="siteSettings" style="display: none;">
         <h3 class="mainTextStaff text-white">Staff Panel - Site Settings</h3>     
        </div>

          <div id="homePage" style="display: none;">
         <h3 class="mainTextStaff text-white">Staff Panel - Home Page</h3> 
        </div>

    </div>
</div>
      <script>
      let siteSettings, homePage;

      siteSettings = document.getElementById("siteSettings");
      homePage = document.getElementsById("homePage");
     async function change(page) {
        if (page === "siteSettings") { 
          siteSettings.style.display = "block";
          homePage.style.display = "none";
        } else if (page === "homePage") { 
          siteSettings.style.display = "none";
          homePage.style.display = "block";
        }
      }
    </script>
   
